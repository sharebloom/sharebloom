#popup
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 12
	// pointer-events none
	background lightpink

	.close-popup-trigger
		square(20px)
		position absolute
		topRight(50px)
		cursor pointer
		&:hover
			svg
				transform rotate(180deg)
				transition .3s all ease
		path
			fill black

	.popup
		.container
			height 100vh

	// viral loops
	.viral-loops
		// display none

	// mailchimp
	.mailchimp
		display none
		text-align center
		.content
			max-width 360px
		form
			margin-left auto
			margin-right auto
		[type="email"]
			width 100%
			margin-right 10px
		[type="submit"]
			width 150px
