#popup
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 12
	transition .3s background ease

	&:not(.is-active)
		pointer-events none
	
	.close-popup-trigger
		square(20px)
		position absolute
		topRight(50px)
		cursor pointer
		opacity 0
		transition .3s all ease
		&:hover
			svg
				transform rotate(180deg)
				transition .3s all ease
		path
			fill black

	.popup
		height 0
		overflow hidden
		.content
			width 400px
		.container
			height 100vh

	// mailchimp
	.mailchimp
		text-align center
		form
			margin-left auto
			margin-right auto
		[type="email"]
			width 100%
			margin-right 10px
		[type="submit"]
			width 150px

	// anim item
	.anim-item
		transform translateY(15px)
		transition .3s opacity ease, .3s transform ease

	// popup is active
	mainDelay = .1s
	&.is-active
		background lightpink
		.close-popup-trigger
			opacity 1

		.anim-item
			opacity 1
			transform none
			&:nth-child(1)
				transition-delay mainDelay
			&:nth-child(2)
				transition-delay mainDelay + .1
			&:nth-child(3)
				transition-delay mainDelay + .2

		&.mailchimp
			.mailchimp
				height auto

		&.viral-loops
			.viral-loops
				height auto
