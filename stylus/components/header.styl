header
	padding 20px 0
	position fixed
	top 15px
	left 0
	right 0
	z-index 9
	-webkit-backface-visibility hidden
	transition .3s top ease
	&:before
		content ''
		position absolute
		top -15px
		left 0
		right 0
		bottom 0
		pointer-events none
		z-index -1
		opacity 0
		transition .3s all ease
		background lightpink
		// box-shadow 0 5px 10px rgba(0,0,0,.025)
		border-bottom 1px solid #e5e5e5

	&.show-bg
		top 0
		&:before
			opacity 1

	.logo
		font-weight 300
		font-size 35px
		color black
		letter-spacing .5px
		position relative
		top -4px
		margin-right auto

	.btn
		margin-left auto

	.nav
		margin-left 40px
		li
			&:not(:last-child)
				margin-right 20px
